<!DOCTYPE html>
<html>
  <head>
    <%#----CSS---%>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <link rel="stylesheet" href="../style.css"/>
    <meta charset="utf-8">
    <title>Pok√©dex</title>
  </head>
  <body>

    <div class="container">

        <img src=<%= poke.img%>>

        <h1> <%= poke.name %> </h1>


            <h3>id</h3>
            <%=poke.id%>
            <h3>Type</h3>
            <table>
              <% for (let i=0; i < poke.type.length; i++){ %>
                <tr>
                  <td><%=poke.type[i]%></td>
                </tr>
              <% } %>
            </table>

            <h3>Stats</h3>
            <% const statsObj = poke.stats %>
            <table>
              <% for (let key in statsObj){%>
                <tr>
                  <td><%=key%>:</td>
                  <td><%=statsObj[key]%></td>
                </tr>
              <% } %>
            </table>

        <h3>Damages</h3>
        <% const damageObj = poke.damages || poke.moves.damages  %>


        <table>
          <% for (let key in damageObj) { %>
            <tr>
              <td><%= key %>:</td>
              <td><%= damageObj[key] %></td>
            </tr>
          <% } %>
        </table>
        <br>
        <a href="/pokemon/<%= poke %>/edit">Edit</a>

  </div>
  </body>
</html>
