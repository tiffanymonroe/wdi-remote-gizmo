<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Pokedex</title>
     <link href="https://fonts.googleapis.com/css?family=Josefin+Sans" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/normalize.css">
    <link rel="stylesheet" type="text/css" href="/main.css">
  </head>
  <body>
    <div id="container">
    <h1><a href="/pokemon"> Back to the Pokedex!</a></h1>
    <div id="one-pokemon">
      <h3><a href=""><%= pokemon.name  %></a></h3>
      <img src="<%= pokemon.img %>" alt="<%= pokemon.name  %>"/>

      <h4> Type: </h4>
      <% console.log(pokemon.type.length); %>
      <ul>
        <% for(var i = 0; i < pokemon.type.length; i ++){ %>
          <li><%= pokemon.type[i].toUpperCase() %></li>
        <% }; %>
      </ul>

      <h4> Stats: </h4>
      <ul>
        <% Object.keys(pokemon.stats).forEach((oneStat) => { %>
          <li><%=oneStat.toUpperCase()%> :  <%=pokemon.stats[oneStat] %></li>
        <% }); %>
      </ul>
      <h4> Damages </h4>
      <ul>
        <% Object.keys(pokemon.damages).forEach((oneDamage) => { %>
          <li><%=oneDamage.toUpperCase()%> :  <%=pokemon.damages[oneDamage] %></li>
        <% }); %>
      </ul>
      <h2><a href="/pokemon/<%=index%>/edit">Edit this pokemon </a></h2>
      <form action="/pokemon/<%= index %>?_method=DELETE" method="POST">
        <input id="delete" type="submit" value="Delete this Pokemon" />
      </form>
    </div>
  </body>
</html>
